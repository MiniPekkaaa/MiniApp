<!DOCTYPE html>
<html>
<head>
    <title>Telegram WebApp</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <div id="main_menu" class="container">
        <h2 class="title">–ù–æ–≤—ã–π –∑–∞–∫–∞–∑</h2>
        <button onclick="showProductSelection()" class="button">
            ‚úèÔ∏è –î–æ–±–∞–≤–∏—Ç—å –ø–æ–∑–∏—Ü–∏—é
        </button>
        <button onclick="showCart()" class="button">
            Ì†ΩÌªí –ö–æ—Ä–∑–∏–Ω–∞: <span id="cart_count">0</span> –ø–æ–∑–∏—Ü–∏–π
        </button>
        <button onclick="cancelOrder()" class="button">
            ‚ùå –û—Ç–º–µ–Ω–∏—Ç—å –∑–∞–∫–∞–∑
        </button>
        <button onclick="closeApp()" class="button">
            Ì†ΩÌ¥í –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
        </button>
    </div>

    <div id="product_selection" class="container" style="display: none;">
        <select id="product_select" class="select">
            <option value="">–í—ã–±–µ—Ä–∏—Ç–µ —Ç–æ–≤–∞—Ä</option>
            {% for product in products %}
            <option value="{{ product.id }}" 
                    data-name="{{ product.name }}"
                    data-fullname="{{ product.fullName }}"
                    data-volume="{{ product.volume }}"
                    data-price="{{ product.price }}"
                    data-legal-entity="{{ product.legalEntity }}">
                {{ product.name }} ({{ product.volume }}–ª) - {{ product.price }}‚ÇΩ
            </option>
            {% endfor %}
        </select>
        <div class="quantity-controls">
            <button onclick="decrementQuantity()" class="button">-</button>
            <input type="number" id="quantity" value="1" min="1" class="quantity-input">
            <button onclick="incrementQuantity()" class="button">+</button>
        </div>
        <button onclick="addToCart()" class="button">–î–æ–±–∞–≤–∏—Ç—å –≤ –∫–æ—Ä–∑–∏–Ω—É</button>
        <button onclick="showMainMenu()" class="button">–ù–∞–∑–∞–¥</button>
    </div>

    <script>
        let tg = window.Telegram.WebApp;
        tg.expand();
        
        let products = {{ products|tojson|safe }};
        console.log("Loaded products:", products);
        
        let cart = [];
        
        function closeApp() {
            tg.close();
        }

        function showProductSelection() {
            document.getElementById('main_menu').style.display = 'none';
            document.getElementById('product_selection').style.display = 'block';
        }
        
        function showMainMenu() {
            document.getElementById('product_selection').style.display = 'none';
            document.getElementById('main_menu').style.display = 'block';
        }
        
        function incrementQuantity() {
            let quantityInput = document.getElementById('quantity');
            quantityInput.value = parseInt(quantityInput.value) + 1;
        }
        
        function decrementQuantity() {
            let quantityInput = document.getElementById('quantity');
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
            }
        }
        
        function addToCart() {
            let select = document.getElementById('product_select');
            let quantity = parseInt(document.getElementById('quantity').value);
            
            if (select.value) {
                let option = select.options[select.selectedIndex];
                let product = {
                    id: select.value,
                    name: option.dataset.name,
                    fullName: option.dataset.fullname,
                    volume: parseFloat(option.dataset.volume),
                    price: parseInt(option.dataset.price),
                    legalEntity: parseInt(option.dataset.legalEntity),
                    quantity: quantity
                };
                
                cart.push(product);
                updateCartCount();
                showMainMenu();
                
                select.value = "";
                document.getElementById('quantity').value = "1";
            }
        }
        
        function updateCartCount() {
            let count = cart.reduce((total, item) => total + item.quantity, 0);
            document.getElementById('cart_count').textContent = count;
        }
        
        function showCart() {
            if (cart.length === 0) {
                tg.showAlert("–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞");
                return;
            }
            
            let message = "–í–∞—à –∑–∞–∫–∞–∑:\n\n";
            let total = 0;
            
            cart.forEach((item, index) => {
                message += `${index + 1}. ${item.name}\n`;
                message += `   –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ: ${item.quantity}\n`;
                message += `   –¶–µ–Ω–∞: ${item.price}‚ÇΩ\n`;
                message += `   –°—É–º–º–∞: ${item.price * item.quantity}‚ÇΩ\n\n`;
                total += item.price * item.quantity;
            });
            
            message += `–û–±—â–∞—è —Å—É–º–º–∞: ${total}‚ÇΩ`;
            
            tg.MainButton.text = "–û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑";
            tg.MainButton.show();
            tg.MainButton.onClick(() => {
                tg.sendData(JSON.stringify({
                    action: "order",
                    items: cart,
                    total: total
                }));
            });
            
            tg.showAlert(message);
        }
        
        function cancelOrder() {
            if (cart.length === 0) {
                tg.showAlert("–ù–µ—á–µ–≥–æ –æ—Ç–º–µ–Ω—è—Ç—å - –∫–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞");
                return;
            }
            
            if (confirm("–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ –æ—Ç–º–µ–Ω–∏—Ç—å –∑–∞–∫–∞–∑?")) {
                cart = [];
                updateCartCount();
                tg.MainButton.hide();
                tg.showAlert("–ó–∞–∫–∞–∑ –æ—Ç–º–µ–Ω–µ–Ω");
            }
        }
    </script>
</body>
</html>